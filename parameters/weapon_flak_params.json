    "projectile_shape": {
      "description": "Individual projectile appearance - 5 parameters",
      "parameters": {
        "projectile_base_shape": {
          "type": "enum",
          "values": ["sphere", "cylinder", "spike", "fragment", "tracer", "shell"],
          "default": "fragment",
          "description": "Basic projectile geometry"
        },
        "projectile_size": {
          "type": "float",
          "min": 4,
          "max": 32,
          "default": 12,
          "variance_min": -2,
          "variance_max": 4,
          "description": "Pixel size"
        },
        "projectile_elongation": {
          "type": "float",
          "min": 0.5,
          "max": 3.0,
          "default": 1.2,
          "variance_min": -0.2,
          "variance_max": 0.5,
          "description": "Length/width ratio"
        },
        "projectile_spin": {
          "type": "float",
          "min": 0,
          "max": 720,
          "default": 180,
          "variance_min": -90,
          "variance_max": 180,
          "description": "Rotation per second (degrees)"
        },
        "projectile_color_variance": {
          "type": "float",
          "min": 0.0,
          "max": 60,
          "default": 10,
          "variance_min": -5,
          "variance_max": 15,
          "description": "HSV hue variation between projectiles"
        }
      }
    },
    "launch_behavior": {
      "description": "How projectiles are fired - 5 parameters",
      "parameters": {
        "scatter_angle": {
          "type": "float",
          "min": 0,
          "max": 90,
          "default": 15,
          "variance_min": -5,
          "variance_max": 10,
          "description": "Spread cone angle (degrees)"
        },
        "projectile_count": {
          "type": "int",
          "min": 1,
          "max": 20,
          "default": 5,
          "variance_min": -1,
          "variance_max": 3,
          "description": "Projectiles per shot"
        },
        "launch_pattern": {
          "type": "enum",
          "values": ["random", "cone", "line", "circle", "spiral"],
          "default": "cone",
          "description": "Spatial distribution pattern"
