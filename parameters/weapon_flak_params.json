        "trail_color_shift": {
          "type": "float",
          "min": -60,
          "max": 60,
          "default": 0,
          "variance_min": -15,
          "variance_max": 15,
          "description": "Color gradient along trail (HSV hue)"
        },
        "trail_turbulence": {
          "type": "float",
          "min": 0.0,
          "max": 1.0,
          "default": 0.2,
          "variance_min": -0.1,
          "variance_max": 0.3,
          "description": "Trail wave/wobble amount"
